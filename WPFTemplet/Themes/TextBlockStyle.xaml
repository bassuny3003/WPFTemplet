<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="txtblkHeader" TargetType="TextBlock">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>

    <Style x:Key="txtblkHeaderLight" TargetType="TextBlock">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>

    <Style x:Key="txtblkVersion" TargetType="TextBlock">
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Offset="0.3" Color="#FF72ADFD" />
                    <GradientStop Offset="1" Color="#FF3685FF" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontStyle" Value="Italic" />

        <Setter Property="Opacity" Value="0.3" />
    </Style>

</ResourceDictionary>