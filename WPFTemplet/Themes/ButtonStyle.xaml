    <!--#region  Modern Button Style ButtonMenu-->

    <Style
        x:Key="ButtonStyle.ModernButtonMenu"
        BasedOn="{StaticResource ButtonStyle.Modern}"
        TargetType="{x:Type Button}">

        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">

            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="White"
                        BorderThickness="0"
                        CornerRadius="0">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />

                    </Border>
                </ControlTemplate>
            </Setter.Value>

        </Setter>

        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="LightSkyBlue" />
            </Trigger>

        </Style.Triggers>

    </Style>

    <!--#endregion-->

    <!--#region  Modern Button Style ButtonMenu With Bottom Left Corner 10-->

    <Style
        x:Key="ButtonStyle.ModernButtonMenuWithBottomLeftCorner"
        BasedOn="{StaticResource ButtonStyle.Modern}"
        TargetType="{x:Type Button}">

        <Setter Property="Background" Value="Transparent" />

        <Setter Property="Template">

            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border
                        x:Name="brdr"
                        Background="{TemplateBinding Background}"
                        BorderBrush="White"
                        BorderThickness="0"
                        CornerRadius="0 0 0 10">

                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />

                    </Border>

                    <ControlTemplate.Triggers>

                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=WindowState}" Value="Maximized">

                            <Setter TargetName="brdr" Property="CornerRadius" Value="0" />

                        </DataTrigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>

        </Setter>

        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="LightSkyBlue" />
            </Trigger>

        </Style.Triggers>

    </Style>

